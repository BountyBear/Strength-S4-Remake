function isAssigned(p: player):: boolean:
	set {_uuid} to {_p}'s uuid
	if any:
		{strength::%{_uuid}%} is not set
		{weapon::%{_uuid}%} is not set
	then:
		return false
	else:
		if {weapon::%{_uuid}%} is not set:
			return false
		else if {strength::%{_uuid}%} is not set:
			return false
		else:
			return true

function isMax(p: player):: boolean:
	set {_uuid} to {_p}'s uuid
	set {_s} to {-strength.max}
	remove 1 from {_s}
	if {strength::%{_uuid}%} <= {_s}:
		return false
	else:
		return true

function isMin(p: player):: boolean:
	set {_uuid} to {_p}'s uuid
	if {strength::%{_uuid}%} > {-strength.min}:
		return false
	else:
		return true


